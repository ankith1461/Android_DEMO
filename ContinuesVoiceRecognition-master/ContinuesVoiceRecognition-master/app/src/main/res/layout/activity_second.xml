<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.continuesvoicerecognition.SecondActivity">


    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/result_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#1a4067"
        android:text="Sila berikan nombor ayat"
        />

    <EditText android:id="@+id/txtText1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter some text to speak"
        android:layout_below="@+id/result_tv1"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/result_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtText1"
        android:layout_marginTop="10dp"
        android:textColor="#1a4067"
        android:text="Sila nyatakan hingga ayat ke berapa"
        />

    <EditText android:id="@+id/txtText3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter some text to speak"
        android:layout_below="@+id/result_tv3"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/view_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtText3"
        android:layout_marginTop="10dp"
        android:textColor="#1a4067"
        android:text="To Display sResult"
        />

    <TextView
        android:id="@+id/result_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view_text1"
        android:layout_marginTop="30dp"
        android:textColor="#1a4067"
        android:text="Berapa kali hendak diulang"
        />

    <EditText android:id="@+id/txtText2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter some text to speak"
        android:layout_below="@+id/result_tv2"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"/>


</RelativeLayout>
